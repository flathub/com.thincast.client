{
    "app-id": "com.thincast.client",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-24.08",
    "sdk": "org.kde.Sdk",
    "command": "rdc",
    "separate-locales": false,
    "appstream-compose": true,
    "tags": [
        "proprietary"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=pcsc",
        "--device=all",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=xdg-run/gvfs",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.kde.kwalletd",
        "--talk-name=org.kde.kwalletd5",
        "--talk-name=org.kde.kwalletd6",
        "--env=QT_VULKAN_LIB=libvulkan.so.1"
    ],
    "cleanup": [
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg",
        "mkdir -p /app/lib/openh264"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.openh264": {
            "directory": "lib/openh264",
            "add-ld-path": ".",
            "version": "2.5.1"
        },
				"org.freedesktop.Platform.ffmpeg-full": {
					"directory": "lib/ffmpeg",
					"add-ld-path": ".",
					"version": "24.08"
				}
    },
    "modules": [
        {
            "name": "client",
            "buildsystem": "simple",
            "build-commands": [
                "tar xf client.tar.xz -C /app",
                "install -D com.thincast.client.appdata.xml $FLATPAK_DEST/share/appdata"
            ],
            "cleanup": [
                "/share/appdata/com.thincast.client.rdwebaccess.appdata.xml",
                "/share/metainfo/com.thincast.client.metainfo.xml",
                "/share/app-info/icons/flatpak/64x64@2/com.thincast.client.png",
                "/share/app-info/icons/flatpak/128x128@2/com.thincast.client.png",
                "/share/app-info/icons/flatpak/48x48/com.thincast.client.png",
                "/share/app-info/icons/flatpak/128x128/com.thincast.client.png",
                "/share/app-info/icons/flatpak/64x64/com.thincast.client.png"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                },
                {
                    "type": "file",
                    "dest-filename": "client.tar.xz",
                    "url": "https://thincast.com/software/download/artifact/by-hash/11a16abaf68a76a83d7f69c2b0f088545960117063ef06840485ef3e73cedd28",
                    "sha256": "11a16abaf68a76a83d7f69c2b0f088545960117063ef06840485ef3e73cedd28",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "file",
                    "dest-filename": "client.tar.xz",
                    "url": "https://thincast.com/software/download/artifact/by-hash/cc895f5ea089e00f4596083e8741ab2e52ab897a66c76ca0443ca6eb91c2e816",
                    "sha256": "cc895f5ea089e00f4596083e8741ab2e52ab897a66c76ca0443ca6eb91c2e816",
                    "only-arches": [
                        "aarch64"
                    ]
                }

            ]
        }
		]
}
