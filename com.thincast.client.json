                {
                    "type": "file",
                    "dest-filename": "client.tar.xz",
                    "url": "https://thincast.com/software/download/artifact/by-hash/ffc7c8cde664f471794a4d002d1e441fd6314d210cddfe0c41c3ff4aacd33fd6",
                    "sha256": "ffc7c8cde664f471794a4d002d1e441fd6314d210cddfe0c41c3ff4aacd33fd6",
