{
    "app-id": "com.thincast.client",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "rdc",
    "separate-locales": false,
    "tags": [
        "proprietary"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio",
        "--device=all",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--filesystem=xdg-run/gvfs",
        "--env=QT_VULKAN_LIB=libvulkan.so.1"
    ],
    "cleanup": [
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg",
        "mkdir -p /app/lib/openh264"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.openh264": {
            "directory": "lib/openh264",
            "add-ld-path": ".",
            "version": "2.1.0"
        },
				"org.freedesktop.Platform.ffmpeg-full": {
					"directory": "lib/ffmpeg",
					"add-ld-path": ".",
					"version": "22.08"
				}
    },
    "modules": [
        {
            "name": "client",
            "buildsystem": "simple",
            "build-commands": [
                "tar xf client.tar.xz -C /app"
            ],
            "sources": [
                {
                    "type": "file",
                    "dest-filename": "client.tar.xz",
                    "url": "https://thincast.com/software/download/artifact/by-hash/f65ebb0346910dee867032081700500753a812b047c6afe0c99cdfa6958b17ee",
                    "sha256": "f65ebb0346910dee867032081700500753a812b047c6afe0c99cdfa6958b17ee",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "file",
                    "dest-filename": "client.tar.xz",
                    "url": "https://thincast.com/software/download/artifact/by-hash/90ed9b274d1353c02c86192beee93e255211c547df7425283c7b1dfb5f730a5f",
                    "sha256": "90ed9b274d1353c02c86192beee93e255211c547df7425283c7b1dfb5f730a5f",
                    "only-arches": [
                        "aarch64"
                    ]
                }

            ]
