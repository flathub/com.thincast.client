{
    "app-id": "com.thincast.client",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "rdc",
    "separate-locales": false,
    "tags": [
        "proprietary"
    ],
